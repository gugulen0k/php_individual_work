<div class="bg-white">
  <main>
    <!-- Hero section -->
    <div class="relative">
      <div class="mx-auto max-w-7xl pt-8 sm:px-6 lg:px-8">
        <div class="relative shadow-xl sm:overflow-hidden sm:rounded-2xl">
          <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-indigo-800 to-purple-900 mix-blend-multiply"></div>
          </div>
          <div class="relative px-6 py-16 sm:py-24 lg:px-8 lg:py-32">
            <h1 class="text-center text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
              <span class="block text-white">Welcome to SuperStore</span>
            </h1>
            <p class="mx-auto mt-6 max-w-lg text-center text-xl text-indigo-100 sm:max-w-3xl">
              Discover our amazing collection of products
            </p>
            <div class="mx-auto mt-10 max-w-sm sm:flex sm:max-w-none sm:justify-center">
              <%= link_to "Browse Products", products_path, class: "flex items-center justify-center rounded-md border border-transparent bg-white px-4 py-3 text-base font-medium text-indigo-700 shadow-sm hover:bg-indigo-50 sm:px-8" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Featured section -->
    <div class="mt-8 bg-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl py-16 sm:py-24 lg:max-w-none lg:py-12">
          <h2 class="text-2xl font-bold text-gray-900">Featured Products</h2>

          <div class="mt-6 space-y-12 lg:grid lg:grid-cols-3 lg:gap-x-6 lg:space-y-0">
            <% @featured_products.each do |product| %>
              <div class="group relative mb-6">
                <div class="relative h-80 w-full overflow-hidden rounded-lg bg-white sm:aspect-h-1 sm:aspect-w-2 lg:aspect-h-1 lg:aspect-w-1 group-hover:opacity-75 sm:h-64">
                  <%= image_tag product.image_url, class: "h-full w-full object-cover object-center" if product.image_url.present? %>
                </div>
                <h3 class="mt-2 text-sm text-gray-500">
                  <%= link_to product_path(product), class: "absolute inset-0" do %>
                    <span class="sr-only">View <%= product.name %></span>
                  <% end %>
                  <%= product.name %>
                </h3>
                <p class="text-base font-semibold text-gray-900">$<%= number_with_precision(product.price, precision: 2) %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Latest Products section -->
    <div class="bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-2xl py-16 sm:py-24 lg:max-w-none lg:py-12">
          <h2 class="text-2xl font-bold text-gray-900">Latest Products</h2>

          <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
            <% @latest_products.each do |product| %>
              <div class="group relative">
                <div class="min-h-80 aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md bg-gray-200 group-hover:opacity-75 lg:aspect-none lg:h-80">
                  <%= image_tag product.image_url, class: "h-full w-full object-cover object-center lg:h-full lg:w-full" if product.image_url.present? %>
                </div>
                <div class="mt-4 flex justify-between">
                  <div>
                    <h3 class="text-sm text-gray-700">
                      <%= link_to product_path(product) do %>
                        <span aria-hidden="true" class="absolute inset-0"></span>
                        <%= product.name %>
                      <% end %>
                    </h3>
                    <p class="mt-1 text-sm text-gray-500"><%= truncate(product.description, length: 50) %></p>
                  </div>
                  <p class="text-sm font-medium text-gray-900">$<%= number_with_precision(product.price, precision: 2) %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div> 