<!DOCTYPE html>
<html>
  <head>
    <title>SuperStore Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-gray-100">
    <div class="min-h-full">
      <nav class="bg-indigo-600">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <%= link_to admin_root_path, class: "text-white font-bold text-xl" do %>
                  SuperStore Admin
                <% end %>
              </div>
              <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-4">
                  <%= link_to admin_root_path, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{current_page?(admin_root_path) ? 'bg-indigo-700' : ''}" do %>
                    Dashboard
                  <% end %>
                  
                  <%= link_to admin_products_path, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{controller_name == 'products' ? 'bg-indigo-700' : ''}" do %>
                    Products
                  <% end %>
                  
                  <%= link_to admin_users_path, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium #{controller_name == 'users' ? 'bg-indigo-700' : ''}" do %>
                    Users
                  <% end %>
                </div>
              </div>
            </div>
            <div class="hidden md:block">
              <div class="ml-4 flex items-center md:ml-6">
                <div class="ml-3 relative">
                  <div class="flex items-center">
                    <span class="text-white text-sm mr-4"><%= current_user.email %></span>
                    <%= button_to destroy_user_session_path, method: :delete, class: "text-white hover:bg-indigo-700 px-3 py-2 rounded-md text-sm font-medium" do %>
                      Sign Out
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>

      <main>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
          <%= turbo_frame_tag "flash" do %>
            <% if notice %>
              <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= notice %></span>
                <button class="absolute top-0 bottom-0 right-0 px-4 py-3" data-action="click->flash#dismiss">
                  <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </button>
              </div>
            <% end %>
            
            <% if alert %>
              <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <span class="block sm:inline"><%= alert %></span>
                <button class="absolute top-0 bottom-0 right-0 px-4 py-3" data-action="click->flash#dismiss">
                  <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </button>
              </div>
            <% end %>
          <% end %>

          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html> 